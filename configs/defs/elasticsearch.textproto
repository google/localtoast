benchmark_configs: {
  id: "elasticsearch-no-anonymous-access"
  compliance_note: {
    version: { cpe_uri: "cpe:/a:elastic:elasticsearch" version: "1.0.0" benchmark_document: "Google-developed benchmark for ElasticSearch" }
    title: "Ensure Anonymous Access is not enabled"
    description:
      "This check verifies that anonymous access is not enabled in Elasticsearch. "
      "Elasticsearch allows for anonymous access to be set up, but this functionality should not be used."
    rationale: "Ensuring that anonymous acces is not enabled is crucial for protecting sensitive data and preventing unauthorized access to your Elasticsearch cluster. "
    remediation:
      "To remediate this issue, follow these steps:\n"
      "1. Open the `elasticsearch.yml` configuration file for your Elasticsearch installation.\n"
      "   - The file is typically located in `/etc/elasticsearch/elasticsearch.yml` on Linux systems or `<Elasticsearch_Home>/config/elasticsearch.yml` on other platforms.\n"
      "2. Search for the `xpack.security.authc` setting in the configuration file.\n"
      "3. If the setting is present, find the anonymous section within and remove it.\n"
      "5. Save the configuration file.\n"
      "6. Restart the Elasticsearch service for the changes to take effect.\n"
      "After performing these steps, Anonymous access will be disabled in Elasticsearch."
    cis_benchmark: {
      profile_level: 1
      severity: LOW
    }
    scan_instructions:
      # /usr/share/elasticsearch/config/elasticsearch.yml
      "generic{check_alternatives:{"
      "  file_checks:{"
      "    files_to_check:{single_file:{path:\"/usr/share/elasticsearch/config/elasticsearch.yml\"}}"
      "    existence:{should_exist: true}"
      "  }"
      "  file_checks:{"
      "    files_to_check:{single_file:{path:\"/usr/share/elasticsearch/config/elasticsearch.yml\"}}"
      "    content_entry: {"
      "      delimiter: \"true\""
      "      match_type: NONE_MATCH"
      "      match_criteria: {"
      "        filter_regex: \".*xpack\\\\.security\\\\.authc:.*anonymous:.*\""
      "        expected_regex: \".*xpack\\\\.security\\\\.authc:.*anonymous:.*\""
