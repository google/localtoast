      "  }"
      "  file_checks:{"
      "    files_to_check:{single_file:{path:\"/etc/elasticsearch/elasticsearch.yml\"}}"
      "    content_entry: {"
      "      delimiter: \"true\""
      "      match_type: NONE_MATCH"
      "      match_criteria: {"
      "        filter_regex: \".*xpack\\\\.security\\\\.authc:.*anonymous:.*\""
      "        expected_regex: \".*xpack\\\\.security\\\\.authc:.*anonymous:.*\""
